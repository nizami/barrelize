{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "directories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "default": ""
          },
          "include": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "**/*.ts"
            ]
          },
          "exclude": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "order": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "indexFilePath": {
            "type": "string",
            "default": "index.ts"
          },
          "replace": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "find": {
                  "type": "string"
                },
                "replacement": {
                  "type": "string"
                }
              },
              "required": [
                "find",
                "replacement"
              ]
            },
            "default": [
              {
                "find": "\\.ts$",
                "replacement": ""
              }
            ]
          }
        },
        "required": []
      }
    }
  },
  "required": [
    "directories"
  ]
}
